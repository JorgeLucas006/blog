<div class="container">
    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Bem vindo!</h1>
        <p class="lead">Esse Ã© um simples Blog.</p>
        <hr class="my-4">
      </div>
    <% result.articles.rows.forEach(article =>{ %>

        <div class="card">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug %>">Artigo</a>
            </div>
        </div>
        <br>

    <% }) %>

    <hr>
    <div class="row">
        <div class="col col-12">
            <% if(result.page != 1){%>
                <a style="float: left"href="/articles/page/<%= result.page - 1 %>"> &lt;&lt;&lt;prev </a>
            <%}%>

            <% if(result.next){%>
                <a style="float: right"href="/articles/page/<%= result.page + 1 %>"> Next&gt;&gt;&gt; </a>
            <%}%>
        </div>
    </div>
    <hr>
</div>
